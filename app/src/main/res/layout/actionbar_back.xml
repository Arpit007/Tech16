<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:background="@color/action_bar_color"
              android:layout_height="match_parent">
    <ImageButton
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" android:id="@+id/actionbar_back"
        android:src="@drawable/icon_back"
        android:padding="10dp"
        android:background="@color/action_bar_color"
        android:layout_width="wrap_content" android:layout_height="match_parent"/>

    <ImageButton
        android:layout_centerVertical="true" android:id="@+id/temp_Button"
        android:layout_alignParentRight="true" android:visibility="invisible"
        android:padding="10dp"
        android:src="@drawable/icon_back" android:background="#00000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/actionbar_title"
        android:text="Activity Label" android:textSize="20sp"
        android:textColor="@color/text_color_primary"
        android:textAlignment="center" android:layout_centerVertical="true"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/temp_Button" android:layout_toStartOf="@id/temp_Button"
        android:layout_toRightOf="@+id/actionbar_back" android:layout_toEndOf="@+id/actionbar_back"/>

</RelativeLayout>