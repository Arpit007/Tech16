<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context="com.nitkkr.gawds.tech16.Activity.Home">

    <include
        layout="@layout/actionbar_navdrawer"
        android:layout_width="match_parent"
        android:id="@+id/top_bar"
        android:layout_height="?attr/actionBarSize"/>

    <RelativeLayout
        android:background="#151A1E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        >

        <TextView
            android:text="WELCOME"
            android:textColor="@color/light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/textView16"
            android:fontFamily="monospace"
            android:textSize="35sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="150dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView16"
            android:layout_centerHorizontal="true"
            android:id="@+id/view6"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/notification"
            android:id="@+id/imageView9"
            android:layout_alignTop="@+id/imageView8"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="44dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/live_home2"
            android:id="@+id/imageView8"
            android:layout_marginEnd="45dp"
            android:layout_alignTop="@+id/view6"
            android:layout_toStartOf="@+id/view6"/>

        <View
            android:layout_width="140dp"
            android:layout_height="0.5dp"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:id="@+id/view7"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/view6"/>

        <View
            android:layout_width="140dp"
            android:layout_height="0.5dp"
            android:background="#fff"
            android:id="@+id/view8"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/view7"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="LIVE EVENTS"
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view6"
            android:id="@+id/textView17"
            android:layout_alignStart="@+id/view7"
            android:layout_alignEnd="@+id/view7"/>

        <TextView
            android:text="NOTIFICATIONS"
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view6"
            android:id="@+id/textView18"
            android:layout_alignStart="@+id/view8"
            android:layout_alignEnd="@+id/view8"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/wishlist"
            android:id="@+id/imageView10"
            android:layout_below="@+id/view8"
            android:layout_alignStart="@+id/imageView8"
            android:layout_marginTop="52dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/suggestions"
            android:id="@+id/imageView11"
            android:layout_alignTop="@+id/imageView10"
            android:layout_alignStart="@+id/imageView9"/>

        <TextView
            android:text="WISHLIST"
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_below="@+id/imageView10"
            android:layout_alignStart="@+id/view7"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/view7"/>

        <TextView
            android:text="INTERESTED"
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_alignStart="@+id/view8"
            android:layout_alignEnd="@+id/view8"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="150dp"
            android:background="#fff"
            android:id="@+id/view10"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/textView20"
            android:layout_toEndOf="@+id/view7"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
