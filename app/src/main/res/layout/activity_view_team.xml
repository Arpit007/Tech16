<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_team"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="match_parent"
    tools:context="com.nitkkr.gawds.tech16.Activity.ViewTeam">
    <include
        layout="@layout/actionbar_back" android:id="@+id/temp_bar"
        android:layout_width="match_parent" android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>

    <RelativeLayout android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/bottom"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_below="@+id/temp_bar">

    <RelativeLayout
        android:id="@+id/temp_Layout"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
            android:id="@+id/temp_Label"
            android:text="Team Name:" android:textSize="20sp"
            android:padding="5dp"
            android:textColor="@color/neon_green"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/view_team_Name"
            android:text="View team Name"
            android:padding="10dp"
            android:textColor="@color/neon_green"
            android:textSize="20sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/temp_Label"
            android:layout_alignBottom="@+id/temp_Label" android:layout_toEndOf="@+id/temp_Label"
        />

    </RelativeLayout>

    <ListView
        android:id="@+id/view_team_list" android:layout_below="@id/temp_Layout"
        android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>


</RelativeLayout>
