<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/tick_container"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/interest_item_label"
        android:layout_weight="115"
        android:layout_marginLeft="25dp"
        android:text="Interest 1" android:textSize="25sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView
        android:layout_weight="1"
        android:id="@+id/interest_item_tick"
        android:src="@drawable/icon_untick" android:layout_alignParentRight="true"
        android:layout_width="wrap_content" android:layout_height="match_parent"/>
</LinearLayout>
</RelativeLayout>