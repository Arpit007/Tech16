<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView android:src="@drawable/list_expand" android:id="@+id/Drop"
               android:layout_centerVertical="true"
               android:layout_alignParentEnd="true" android:layout_marginEnd="15dp"
               android:layout_width="22dp" android:layout_height="22dp"/>
    <TextView
        android:id="@+id/event_list_head_label" android:text="Sample"
        android:textSize="21sp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/Drop"
        android:textColor="@color/neon_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>