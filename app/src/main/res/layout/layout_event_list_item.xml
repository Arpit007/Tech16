<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/app_background"
              android:layout_height="wrap_content">

   <RelativeLayout android:layout_width="match_parent"
                   android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_list_item_label"
        android:textSize="19sp"
        android:textColor="@color/neon_green"
        android:text="Hello World"
        android:padding="15dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentStart="true" android:layout_toStartOf="@+id/Event_Star"/>
       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp" app:srcCompat="@drawable/icon_unstarred"
           android:id="@+id/Event_Star"
           android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
           android:layout_centerVertical="true" android:layout_alignParentEnd="true"
           android:layout_marginEnd="11dp"/>

   </RelativeLayout>
</LinearLayout>