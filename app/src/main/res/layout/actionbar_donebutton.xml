<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:background="@color/action_bar_color"
              android:layout_height="match_parent">
    <ImageButton
        android:layout_alignParentLeft="true"
        android:background="#00000000" android:layout_centerVertical="true"
        android:id="@id/actionbar_back" android:src="@drawable/icon_back"
        android:padding="5dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/actionbar_DoneButton"
        android:text="Done" android:textSize="15sp"
        android:textColor="@color/text_color_primary"
        android:layout_centerVertical="true" android:drawableLeft="@drawable/icon_tick"
        android:background="#00000000" android:layout_alignParentRight="true"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:text="Activity Label"
        android:textSize="20sp" android:id="@+id/actionbar_title"
        android:textColor="@color/text_color_primary"
        android:layout_toLeftOf="@id/actionbar_DoneButton" android:textAlignment="center"
        android:layout_centerVertical="true" android:layout_toRightOf="@id/actionbar_back"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</RelativeLayout>