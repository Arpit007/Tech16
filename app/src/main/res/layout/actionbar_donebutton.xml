<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.comapk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/action_bar_color"
                android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatImageButton
        android:layout_alignParentStart="true"
        android:background="#00000000" android:layout_centerVertical="true"
        android:id="@id/actionbar_back" app:srcCompat="@drawable/icon_back"
        android:padding="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/actionbar_DoneButton"
        android:text="Done" android:textSize="15sp"
        android:textColor="@color/text_color_primary"
        android:layout_centerVertical="true" android:drawableStart="@drawable/icon_tick"
        android:background="#00000000" android:layout_alignParentEnd="true"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:text="Activity Label"
        android:textSize="20sp" android:id="@+id/actionbar_title"
        android:textColor="@color/text_color_primary"
        android:layout_toStartOf="@id/actionbar_DoneButton" android:textAlignment="center"
        android:layout_centerVertical="true" android:layout_toEndOf="@id/actionbar_back"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</RelativeLayout>