<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/border_button"
              android:paddingTop="15dp"
              android:layout_width="280dp"
              android:layout_height="wrap_content">

    <TextView
    android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
    android:textSize="20sp" android:layout_marginBottom="15dp"
    android:text="Team Name" android:textColor="@color/text_color_primary"
    android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:inputType="textCapWords"
        android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" android:id="@+id/Team_Name"
        android:textSize="20sp" android:textColor="@color/text_color_primary"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
        android:text="Ok" android:id="@+id/CheckAvailability"
        android:background="@drawable/border_button"
        android:textColor="@color/text_color_primary"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</LinearLayout>