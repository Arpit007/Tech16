<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_team"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context="com.nitkkr.gawds.tech16.activity.CreateTeam">
    <include
        layout="@layout/actionbar_back" android:id="@+id/temp_bar"
        android:layout_width="match_parent" android:layout_height="?actionBarSize"/>


    <Button
        android:background="@drawable/border_button"
        android:textColor="@color/neon_green"
        android:id="@+id/team_register_button" android:onClick="Register"
        android:layout_alignParentBottom="true" android:text="Register"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <RelativeLayout android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/bottom"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_below="@+id/temp_bar" android:layout_above="@id/team_register_button">

            <EditText
                android:id="@+id/team_register_Name"
                android:hint="Team Name"
                android:textColorHint="@color/text_color_primary"
                android:padding="10dp"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/team_register_list" android:layout_below="@id/team_register_Name"
            android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>
