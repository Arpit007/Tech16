<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <ImageButton
        android:id="@+id/actionbar_navButton"
        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
        android:src="@drawable/icon_navigator" android:background="#00000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/actionbar_search"
        android:layout_centerVertical="true" android:layout_alignParentRight="true"
        android:src="@drawable/icon_search" android:background="#00000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:text="Activity Label"
        android:textSize="20sp" android:id="@+id/actionbar_title"
        android:layout_toLeftOf="@id/actionbar_search" android:textAlignment="center"
        android:layout_centerVertical="true" android:layout_toRightOf="@id/actionbar_navButton"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

</RelativeLayout>