<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nitkkr.gawds.tech17.activity.Home">

    <include
        layout="@layout/actionbar_navdrawer"
        android:layout_width="match_parent"
        android:id="@+id/top_bar"
        android:layout_height="?attr/actionBarSize"/>

    <RelativeLayout
        android:background="#151A1E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        >

        <TextView
            android:text="WELCOME"
            android:textColor="@color/light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/textView16"
            android:fontFamily="monospace"
            android:textSize="35sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="150dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView16"
            android:layout_centerHorizontal="true"
            android:id="@+id/view6"/>

        <View
            android:layout_width="145dp"
            android:layout_height="0.5dp"
            android:layout_marginEnd="20dp"
            android:background="#fff"
            android:id="@+id/view7"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/view6"/>

        <View
            android:layout_width="140dp"
            android:layout_height="0.5dp"
            android:background="#fff"
            android:id="@+id/view8"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/view7"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:onClick="onClick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/suggestions"
            android:id="@+id/InterestedEvents"
            android:layout_alignTop="@+id/WishlistEvents"
            android:layout_alignStart="@+id/NotificationEvents"
            android:layout_alignEnd="@+id/textView20"/>

        <TextView
            android:text="WISHLIST "
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_below="@+id/WishlistEvents"
            android:layout_alignStart="@+id/view7"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/view7"/>

        <TextView
            android:text="SUGGESTED"
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_alignStart="@+id/view8"
            android:layout_alignEnd="@+id/view8"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="140dp"
            android:background="#fff"
            android:id="@+id/view10"
            android:layout_marginEnd="20dp"
            android:layout_above="@+id/textView20"
            android:layout_toEndOf="@+id/view7"/>

        <ImageView
            android:onClick="onClick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/notification"
            android:id="@+id/NotificationEvents"
            android:layout_alignTop="@+id/view6"
            android:layout_alignEnd="@+id/textView18"
            android:layout_alignStart="@+id/textView18"/>

        <TextView
            android:text="LIVE EVENTS"
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_below="@+id/LiveEvents"
            android:layout_alignStart="@+id/view7"
            android:layout_marginTop="17dp"
            android:layout_alignEnd="@+id/view7"/>

        <TextView
            android:text="NOTIFICATIONS"
            android:textColor="@color/text_color_primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_alignStart="@+id/view8"
            android:layout_alignEnd="@+id/view8"/>

        <ImageView
            android:onClick="onClick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/wishlist"
            android:id="@+id/WishlistEvents"
            android:layout_marginTop="51dp"
            android:layout_below="@+id/view8"
            android:layout_alignStart="@+id/LiveEvents"
            android:layout_alignEnd="@+id/textView19"/>

        <ImageView
            android:onClick="onClick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/live_home2"
            android:id="@+id/LiveEvents"
            android:layout_marginEnd="10dp"
            android:layout_alignTop="@+id/view6"
            android:layout_alignStart="@+id/textView19"
            android:layout_alignEnd="@+id/textView17"/>
        <TextView
            android:text="gawds"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/neon_green"
            android:layout_height="wrap_content"
            android:id="@+id/gawdsFont" android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/textView"/>
        <TextView
            android:text="Cooked with love by,"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color_primary"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_above="@+id/gawdsFont"
            android:layout_alignEnd="@+id/textView20"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
