<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/app_background"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:layout_alignEnd="@+id/unread"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/notification_title"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="35dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/neon_green"
            android:text="Title" android:textSize="20sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/unread"
            app:srcCompat="@drawable/ic_error_outline_black_24dp" android:tint="@color/border_color"
            android:layout_marginEnd="35dp"
            android:layout_alignParentEnd="true" android:layout_centerVertical="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/notification_title"
            android:id="@+id/notification_message"
            android:layout_marginStart="45dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/neon_green"
            android:text="Message..."
            android:textSize="16sp"
            android:maxLines="1" android:ellipsize="end"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/notification_title"/>
</RelativeLayout>