<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_avatar_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitkkr.gawds.tech16.activity.AvatarPicker">
    <include
        layout="@layout/actionbar_back" android:id="@id/temp_bar"
        android:layout_width="match_parent" android:layout_height="?actionBarSize"/>

    <GridView
        android:stretchMode="columnWidth" android:gravity="center"
        android:numColumns="2" android:horizontalSpacing="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/temp_bar" android:id="@+id/avatar_list"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:verticalSpacing="10dp" android:columnWidth="100dp"/>

</RelativeLayout>
