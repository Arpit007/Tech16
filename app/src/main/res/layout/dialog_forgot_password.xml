<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_margin="20dp"
              android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:text="@string/enter_registered_email"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/login_ForgotEmail" android:padding="5dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/Recover"
        android:layout_gravity="end" android:text="@string/recover"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>